{% if flash.getMessage('info') %}
	<div class="alert alert-info flash-margin">
		{{ flash.getMessage('info') | first }}
	</div>
{% endif %}

{% if flash.getMessage('error') %}
	<div class="alert alert-danger flash-margin">
		{{ flash.getMessage('error') | first }}
	</div>
{% endif %}

{% if flash.getMessage('success') %}
	<div class="alert alert-success flash-margin">
		{{ flash.getMessage('success') | first }}
	</div>
{% endif %}

{% if flash.getMessage('confirm') %}
  <div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="limiter">
            <div class="container-login100">
                <div class="wrap-login200 p-t-50 p-b-90">
                    <form id="confirmForm" class="login100-form validate-form flex-sb flex-w" action="{{ path_for('auth.cancel.complete') }}" method="get">
                        <span class="login100-form-title p-b-51">
                            ID Cancellation
                        </span>
			            <div class="modal-body">
			                <p style="font-size: 150%;">Do you want to delete your ID?</p>
			                <p class="text-warning" style="font-size: 150%;"><small>If you select ok, your ID will be deleted.</small></p>
			            </div>
                        <div class="container-login200-form-btn m-t-17">
                            <button type="submit" class="login200-form-btn" onclick="document.getElementById('confirmForm').submit()">
                                OK
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
      </div>
    </div>
  </div>
<script type="text/javascript">
    $(document).ready(function(){
        $("#confirmModal").modal('show');
    });
</script>
{% endif %}