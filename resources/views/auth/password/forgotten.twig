{% extends 'templates/app.twig' %}

{% block content %}
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="panel panel-default">
				<div class="panel-heading">Forgotten Password</div>
				<div class="panel-body">
					<form action="{{ path_for('auth.password.forgotten') }}" method="post" autocomplete="off">
						<div class="form-group{{ errors.email ? ' has-error' : '' }}">
							<label for="email">Email</label>
							<input type="text" name="email" id="email" placeholder="team-c@ucsd.edu" class="form-control" value="{{ old.email }}">
							{% if errors.email %}
								<span class="help-block">{{ errors.email | first }}</span>
							{% endif %}
						</div>
						<button type="submit" id="mySubmit" class="btn btn-default">Confirm</button>
						{{ csrf.field | raw }}
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}